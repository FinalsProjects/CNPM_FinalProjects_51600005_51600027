            <!-- End Sidebar scroll-->
        </aside>
        <!-- ============================================================== -->
        <!-- End Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Bread crumb and right sidebar toggle -->
                <!-- ============================================================== -->
                <div class="row page-titles">
                    <div class="col-md-6 col-8 align-self-center">
                        <h3 class="text-themecolor m-b-0 m-t-0">Products</h3>
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                            <li class="breadcrumb-item active">Products</li>
                            <li class="breadcrumb-item active">Edit</li>
                        </ol>
                    </div>
                 
                </div>
                <!-- ============================================================== -->
                <!-- MAin of Index -->
                @model Finalsx4.Models.Product

                @{
                    ViewBag.Title = "Edit";
                }


                @using (Html.BeginForm("Edit",
                        "Products",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.PD_ID)

                        <div class="form-group">
                            <text>Name</text>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PD_Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PD_Name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <text>Description</text>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PD_Description, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PD_Description, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <text>Images</text>
                            <div class="col-md-10">
                                <div class="col-md-10">
                                    <input type="file" name="editImage" id="editImage" style="width: 100%;" />
                                </div>
                                <img src="~/@Model.PD_Image" width="20%" />
                            </div>
                        </div>

                        <div class="form-group">
                            <text>Price</text>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PD_Price, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.PD_Price, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Save" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }



                <!-- ============================================================== -->
                
                <!-- Row -->
                <!-- Row -->
                
                <!-- Row -->
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- footer -->
            <!-- ============================================================== -->
            <footer class="footer text-center">
                © 2019 Bloomy Admin
            </footer>
            <!-- ============================================================== -->
            <!-- End footer -->
